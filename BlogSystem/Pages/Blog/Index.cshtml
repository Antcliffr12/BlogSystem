@page
@model BlogSystem.Pages.Blog.IndexModel
@{
}

<div class="container">
    <form method="post">
         
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Blog.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Blog.Title" class="form-control" />
            </div>
            <span asp-validation-for="Blog.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Blog.Body"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Blog.Body" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Blog.Body" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Home</a>
            </div>
        </div>
        
    </form>
</div>
